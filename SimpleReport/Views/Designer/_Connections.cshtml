<div class="row content-text" ng-hide="!connections">
    <div class="col-xs-12">
        <div class="form-inline">
            <div class="form-group">
                <label class="control-label">Choose connection to edit</label>
                <select ng-model="connection" class="form-control" ng-options="item as item.Name for item in connections" ng-change="connectionChanged()"></select>
            </div>
            <button class="btn btn-primary" ng-click="addNewConnection()"><i class="fa fa-plus"></i> Add new</button>
        </div>
    </div>
</div>


<form role="form" ng-hide="!connection">
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label" title="Give your connectionstring a name, it will show up in dropdownmenus when you choose connectionstring.">Name</label>
                                <div>
                                    <input type="text" ng-model="connection.Name" class="form-control" title="Give your connectionstring a name, it will show up in dropdownmenus when you choose connectionstring.">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="control-label" title="The connectionstring to use for reports">Connectionstring</label>
                                <div>
                                    <textarea ng-model="connection.ConnectionString" cols="5" class="form-control" title="The connectionstring to use for reports"></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="control-label" title="Is the connectionstring verified?">Verified</label>
                                <div>
                                    <button class="btn btn-primary" ng-click="verifyConnection()"><i class="fa fa-check"></i> Verify</button> <h4><span ng-show="connection.Verified" class="label label-success"><i class="fa fa-thumbs-up"></i> Connection valid!</span><span ng-show="!connection.Verified" class="label label-danger"><i class="fa fa-thumbs-down"></i> Connection not valid!</span></h4> 
                                </div>
                             </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-info alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h4><i class="icon fa fa-info"></i> Info!</h4>
                For explaination of connection string syntax for SQL-server, please look at: <a href="https://www.connectionstrings.com/sqlconnection/" target="External">www.connectionstrings.com</a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="box-footer">
                <button type="button" class="btn btn-success" ng-click="saveConnection()">Save changes</button>
            </div>
        </div>
    </div>
</form>